<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrankFragment"
    android:background="@drawable/bg_strawberry">

    <ImageView
        android:id="@+id/iv_prank"
        android:layout_width="345dp"
        android:layout_height="224dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="197dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/prank_loading"
        android:layout_width="345dp"
        android:layout_height="224dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="197dp"
        app:lottie_fileName="jokes_loading.json"/>

    <TextView
        android:id="@+id/tv_klubnichka"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/moloko"
        android:text="@string/good_prank"
        android:textColor="@color/good_prank_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="220dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/hedgehog_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_klubnichka"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:lottie_fileName="hedgehog_animation.json"/>




</androidx.constraintlayout.widget.ConstraintLayout>